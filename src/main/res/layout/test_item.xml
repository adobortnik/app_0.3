<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#FFF"
    app:cardCornerRadius="1dp"
    app:cardElevation="2.5dp"
    app:cardUseCompatPadding="false">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="19dp"
            android:fontFamily="sans-serif"
            android:text="Wow, Jack looks so much like mother. He really takes ___ her"
            android:textColor="#545353"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:textSize="14sp"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="27dp"
            android:drawableLeft="@drawable/time_icon"
            android:drawablePadding="6dp"
            android:fontFamily="sans-serif"
            android:text="0.30s"
            android:textStyle="bold" />

        <TextView
            android:textSize="14sp"
            android:id="@+id/correct_sentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/fajka"
            android:drawablePadding="6dp"
            android:fontFamily="sans-serif"
            android:text="sad"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="19dp"
            android:background="@drawable/correct_icon" />
    </FrameLayout>

</android.support.v7.widget.CardView>