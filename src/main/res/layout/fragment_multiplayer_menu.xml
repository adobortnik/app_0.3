<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <ImageView
        android:id="@+id/tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/tab1" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/logo_supersmall" />


    <TextView
        android:id="@+id/going"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/logo"
        android:text="HOW IS IT GOING?"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/going"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/logo"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="ADRIÃN"
        android:textAllCaps="true"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/join_tab"
        android:layout_width="310dp"
        android:layout_height="95dp"
        android:layout_below="@+id/tab"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="7dp"
        app:cardElevation="4.5dp">

        <FrameLayout
            android:id="@+id/join_room"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/join_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/join_icon" />

            <TextView
                android:id="@+id/practise_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Join the room"
                android:textColor="#333333"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/practise_description"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="106dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif"
                android:text="Type your code from your friend and play against him!"
                android:textSize="9sp"
                android:textStyle="bold" />

        </FrameLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="310dp"
        android:layout_height="95dp"
        android:layout_below="@+id/join_tab"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="7dp"
        app:cardElevation="4.5dp">

        <FrameLayout
            android:id="@+id/create_room"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/create_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/create_icon" />

            <TextView
                android:id="@+id/create_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Create the room"
                android:textColor="#333333"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/create_description"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="106dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif"
                android:text="Create the room and send code to your friend"
                android:textSize="9sp"
                android:textStyle="bold" />

        </FrameLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
